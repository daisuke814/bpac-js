{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": true,
        "noEmit": false,
        "outDir": "dist",
        "allowJs": true,
        "checkJs": false
    },
    "include": ["src/**/*.ts"],
}